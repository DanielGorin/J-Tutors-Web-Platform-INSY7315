@model J_Tutors_Web_Platform.Models.Users.UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "User";
}



<h1 class="mb-4">My Profile</h1>


@if (TempData["ProfileSaved"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<form asp-controller="User" asp-action="UProfile" method="post">
    @Html.AntiForgeryToken()


    <div class="card shadow p-3 mb-4">
        <h3 class="mb-3">Account Overview</h3>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">First Name</label>
                <input class="form-control" value="@Model.FirstName" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Surname</label>
                <input class="form-control" value="@Model.Surname" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Birth Date</label>
                <input class="form-control" value="@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "—")" readonly />
            </div>
            <div class="col-md-6">
                <label class="form-label">Registration Date</label>
                <input class="form-control" value="@(Model.RegistrationDate?.ToString("yyyy-MM-dd") ?? "—")" readonly />
            </div>
        </div>
    </div>

    <div class="card shadow p-3">
        <h3 class="mb-3">Edit Details</h3>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="SubjectInterest" class="form-label"></label>
                <input asp-for="SubjectInterest" class="form-control" />
            </div>

            <div class="col-md-6">
                <div class="form-check mt-4">
                    <input asp-for="LeaderboardVisible" class="form-check-input" />
                    <label asp-for="LeaderboardVisible" class="form-check-label"></label>
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="ThemePreference" class="form-label"></label>
                <select asp-for="ThemePreference" class="form-select">
                    <option value="Light">Light</option>
                    <option value="Dark">Dark</option>
                </select>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="UDashboard">Back to Dashboard</a>
        </div>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
