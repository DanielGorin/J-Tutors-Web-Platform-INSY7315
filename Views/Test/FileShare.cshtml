@model IReadOnlyList<string>
@{
    ViewData["Title"] = "File Share – Super Simple Demo";
}
<div class="container mt-4">
    <h1>File Share – Upload / Download (Root)</h1>

    <form asp-action="FileShareUpload" method="post" enctype="multipart/form-data" class="mb-3">
        <div class="input-group">
            <input type="file" name="file" class="form-control" />
            <button class="btn btn-primary" type="submit">Upload</button>
        </div>
    </form>

    @if (Model?.Count > 0)
    {
        <table class="table table-sm">
            <thead><tr><th>File</th><th class="text-end">Action</th></tr></thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td><code>@f</code></td>
                        <td class="text-end">
                            <a class="btn btn-outline-secondary btn-sm" asp-action="FileShareDownload" asp-route-name="@f">Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-muted">No files in root.</div>
    }
</div>
