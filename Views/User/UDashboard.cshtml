@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["NavSection"] = "User";
}

<!-- Scoped style just for the split buttons -->
<style>
    .split-btns .btn {
        width: 100%;
    }
</style>

<h1 class="mb-4">Welcome to Your Dashboard</h1>

<div class="row mb-4">
    <!-- Points Overview Card -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Points Overview</h3>
            <p><strong>Current Points:</strong> [ ... ]</p>
            <p><strong>All-Time Points:</strong> [ ... ]</p>
            <a asp-controller="Home" asp-action="Points" class="btn btn-sm btn-outline-primary">View Full Ledger</a>
        </div>
    </div>

    <!-- Upcoming Events Card -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Upcoming Events</h3>
            <p>[ List of upcoming events the user is signed up for ]</p>
            <!-- Split buttons 50/50, “My” on the left -->
            <div class="row g-2 split-btns">
                <div class="col-6">
                    <a asp-controller="Home" asp-action="Events" class="btn btn-sm btn-outline-primary">Event History</a>
                </div>
                <div class="col-6">
                    <a asp-controller="Home" asp-action="Events" class="btn btn-sm btn-outline-primary">New Events</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- Tutoring Sessions Card -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>My Tutoring Sessions</h3>
            <p>[ List of upcoming or past sessions ]</p>
            <!-- Split buttons 50/50, “My” on the left -->
            <div class="row g-2 split-btns">
                <div class="col-6">
                    <a asp-controller="Home" asp-action="MyTutoring" class="btn btn-sm btn-outline-primary">My Sessions</a>
                </div>
                <div class="col-6">
                    <a asp-controller="Home" asp-action="MyTutoring" class="btn btn-sm btn-outline-primary">Book</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Leaderboard Preview -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Leaderboard Snapshot</h3>
            <p>[ Top 3 current rankings (Username, Points, Δ Rank) ]</p>
            <a asp-controller="User"
               asp-action="UPointsLeaderboard"
               asp-route-mode="Current"
               asp-route-time="ThisMonth"
               class="btn btn-sm btn-outline-primary">
                See Full Leaderboard
            </a>

        </div>
    </div>
</div>

<!-- Quick Links Section -->
<div class="card shadow p-3 mb-4">
    <h3>Quick Links</h3>
    <ul class="list-unstyled mt-2">
        <a asp-controller="User" asp-action="UProfile">Profile</a>
        <li><a asp-controller="Home" asp-action="UFileLibrary">→ File Library</a></li>
        @* Removed: About J Tutors / Points System info *@
    </ul>
</div>

