@model J_Tutors_Web_Platform.ViewModels.APricingViewModel
@{
    ViewData["Title"] = "Booking Rules & Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "Admin";
}

<style>
    .aquotes, .aquotes .card {
        color: var(--text-color) !important;
    }

        .aquotes .caption, .aquotes .text-muted {
            color: var(--muted-text-color) !important;
        }

        .aquotes .form-control, .aquotes .form-select, .aquotes input[type="number"], .aquotes input[type="range"] {
            background-color: var(--surface-color) !important;
            color: var(--text-color) !important;
            border: 1px solid var(--border-color) !important;
            border-radius: 8px !important;
            padding: 10px 12px !important;
            width: 100%;
        }

            .aquotes .form-control::placeholder {
                color: var(--muted-text-color) !important;
            }

            .aquotes .form-control:focus, .aquotes .form-select:focus, .aquotes input[type="number"]:focus, .aquotes input[type="range"]:focus {
                outline: none !important;
                border-color: var(--primary-color) !important;
                box-shadow: 0 0 0 0.15rem var(--accent-color) !important;
            }

        .aquotes .table, .aquotes .table th, .aquotes .table td {
            color: var(--text-color) !important;
            background: transparent !important;
            border-color: var(--border-color) !important;
            vertical-align: middle;
        }

            .aquotes .table thead th {
                border-bottom: 1px solid var(--border-color) !important;
            }

            .aquotes .table tbody tr + tr {
                border-top: 1px solid var(--border-color) !important;
            }

            .aquotes .table tbody tr:hover {
                background: rgba(0,0,0,0.03);
            }

        .aquotes .chip {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            border: 1px solid var(--border-color);
            margin-right: 8px;
            margin-bottom: 8px;
            white-space: nowrap;
        }

        .aquotes .section-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
</style>

<div class="aquotes">
    <div class="d-flex justify-content-between align-items-center mb-16">
        <h1 class="mb-0">Booking Rules &amp; Pricing</h1>
        <div class="d-flex gap-2">
            <a asp-controller="Admin" asp-action="ADashboard" class="btn btn-secondary">← Back to Dashboard</a>
            <a asp-controller="Home" asp-action="UBooking" class="btn btn-outline-primary">Preview Booking</a>
        </div>
    </div>

    @if (TempData["APricingError"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["APricingOk"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }

    <div class="row g-3">
        <!-- LEFT: Subjects -->
        <div class="col-lg-5">
            <div class="card shadow p-24">
                <div class="section-title">
                    <h3 class="mb-0">Subjects</h3>
                </div>
                <div class="caption mt-8">Add/remove subjects and toggle active status.</div>

                <!-- Add Subject -->
                <form asp-action="CreateSubject" asp-controller="Admin" method="post" class="mt-16 d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input name="subjectName" class="form-control" placeholder="e.g., Maths" />
                    <button class="btn btn-outline-primary" type="submit">Add</button>
                </form>

                <!-- List -->
                <div class="table-responsive mt-16">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Active</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.Subjects)
                            {
                                var selected = Model.SelectedSubjectID == s.SubjectID;
                                <tr class="@(selected ? "table-active" : "")">
                                    <td>
                                        <a asp-action="APricing" asp-controller="Admin" asp-route-subjectId="@s.SubjectID">@s.SubjectName</a>
                                    </td>
                                    <td>
                                        <form asp-action="ToggleSubject" asp-controller="Admin" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="subjectId" value="@s.SubjectID" />
                                            <input type="hidden" name="isActive" value="@(!s.IsAvtive)" />
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" @(s.IsAvtive ? "checked" : "") onchange="this.form.submit()" />
                                            </div>
                                        </form>
                                    </td>
                                    <td class="text-end">
                                        <form asp-action="DeleteSubject" asp-controller="Admin" method="post" onsubmit="return confirm('Delete subject & pricing?');" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="subjectId" value="@s.SubjectID" />
                                            <button class="btn btn-sm btn-outline-secondary" type="submit">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- RIGHT: Pricing -->
        <div class="col-lg-7">
            <div class="card shadow p-24 h-100">
                <div class="section-title">
                    <h3 class="mb-0">Pricing</h3>
                </div>
                <div class="caption mt-8">Set hourly rate and constraints for the selected subject.</div>

                @if (Model.SelectedSubjectID is null)
                {
                    <div class="alert alert-info mt-16">Select a subject on the left to edit pricing.</div>
                }
                else
                {
                    <form asp-action="SavePricing" asp-controller="Admin" method="post" class="mt-16">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="subjectId" value="@Model.SelectedSubjectID" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Hourly Rate (R)</label>
                                <input class="form-control" type="number" name="hourlyRate" step="0.01" min="0"
                                       value="@(Model.HourlyRate?.ToString() ?? "0.00")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Max Point Discount</label>
                                <input class="form-control" type="number" name="maxPointDiscount" step="0.01" min="0"
                                       value="@(Model.MaxPointDiscount?.ToString() ?? "0.00")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Min Hours</label>
                                <input class="form-control" type="number" name="minHours" step="0.25" min="0.25"
                                       value="@(Model.MinHours?.ToString() ?? "1.00")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Max Hours</label>
                                <input class="form-control" type="number" name="maxHours" step="0.25" min="0.25"
                                       value="@(Model.MaxHours?.ToString() ?? "2.00")" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-16">
                            <button class="btn btn-primary" type="submit">Save Pricing</button>
                        </div>
                    </form>
                }

                <div class="caption mt-8">
                    Note: constraints apply during booking; discount is capped per subject by “Max Point Discount”.
                </div>
            </div>
        </div>
    </div>
</div>
