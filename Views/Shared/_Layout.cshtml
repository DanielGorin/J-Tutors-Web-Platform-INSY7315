@{
    var title = ViewData["Title"] as string ?? "JTutors";
    // Optional: allow views to set theme via ViewData["ThemeClass"] = "dark-theme"/"light-theme"
    var themeClass = (ViewData["ThemeClass"] as string) ?? "light-theme";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - JTutors</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/J_Tutors_Web_Platform.styles.css" asp-append-version="true" />

    <!-- Navbar theme-aware tweaks (uses your CSS variables) -->
    <style>
        .app-navbar {
            background-color: var(--surface-color) !important;
            border-bottom: 1px solid var(--border-color) !important;
        }

            .app-navbar .navbar-brand,
            .app-navbar .nav-link {
                color: var(--text-color) !important;
            }

                .app-navbar .nav-link.active {
                    color: var(--primary-color) !important;
                    border-bottom: 2px solid var(--primary-color);
                }

            .app-navbar .navbar-toggler {
                border-color: var(--border-color) !important;
                color: var(--text-color) !important;
            }

                .app-navbar .navbar-toggler .label {
                    font-size: 14px;
                    color: var(--muted-text-color);
                }
    </style>
</head>
<body class="@themeClass">
    <header>
        @await Html.PartialAsync("_Nav")
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - JTutors
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
