@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "User";
}

<style>
    .split-btns .btn {
        width: 100%;
    }
</style>

<h1 class="mb-4">Welcome to Your Dashboard</h1>

<div class="row mb-4">
    <!-- Points Overview -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Points Overview</h3>
            <a asp-controller="User" asp-action="UPointsLedger" class="btn btn-sm btn-outline-primary">
                View Full Ledger
            </a>
        </div>
    </div>

    <!-- Events -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Events</h3>
            <div class="row g-2 split-btns">
                <div class="col-6">
                    <a asp-controller="Event" asp-action="GetUEventHistory" class="btn btn-sm btn-outline-primary">
                        Event History
                    </a>
                </div>
                <div class="col-6">
                    <a asp-controller="Event" asp-action="GetUEventList" class="btn btn-sm btn-outline-primary">
                        New Events
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- Tutoring Sessions -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Tutoring</h3>
            <div class="row g-2 split-btns">
                <div class="col-6">
                    <a asp-controller="User" asp-action="USessions" class="btn btn-sm btn-outline-primary">
                        My Sessions
                    </a>
                </div>
                <div class="col-6">
                    <a asp-controller="User" asp-action="UBooking" class="btn btn-sm btn-outline-primary">
                        Book
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Leaderboard -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Leaderboard</h3>
            <a asp-controller="User"
               asp-action="UPointsLeaderboard"
               asp-route-mode="Current"
               asp-route-time="ThisMonth"
               class="btn btn-sm btn-outline-primary">
                See Full Leaderboard
            </a>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="card shadow p-3 mb-4">
    <h3>Quick Links</h3>
    <ul class="list-unstyled mt-2">
        <li><a asp-controller="User" asp-action="UProfile">Profile</a></li>
        <li><a asp-controller="Test" asp-action="GetUserFiles">File Library</a></li>
        <li><a asp-controller="User" asp-action="UPointsLedger">Points</a></li>
    </ul>
</div>
