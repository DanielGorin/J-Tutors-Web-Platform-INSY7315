<!-- Tiny UI-only script to keep min/max % coherent -->
@section Scripts {
    <script>
        (function () {
            const minPct = document.getElementById('minPct');
            const maxPct = document.getElementById('maxPct');
            const rMin = document.getElementById('rangeMin');
            const rMax = document.getElementById('rangeMax');
            const lblMin = document.getElementById('rangeMinLabel');
            const lblMax = document.getElementById('rangeMaxLabel');

            function sync() {
                // Clamp and enforce min <= max
                let mi = Math.max(0, Math.min(100, parseInt(minPct.value || '0', 10)));
                let ma = Math.max(0, Math.min(100, parseInt(maxPct.value || '0', 10)));
                if (mi > ma) mi = ma;
                minPct.value = mi; maxPct.value = ma;
                rMin.value = mi; rMax.value = ma;
                lblMin.textContent = mi + '%';
                lblMax.textContent = ma + '%';
            }

            ['input', 'change'].forEach(evt => {
                minPct.addEventListener(evt, sync);
                maxPct.addEventListener(evt, sync);
                rMin.addEventListener(evt, e => { minPct.value = e.target.value; sync(); });
                rMax.addEventListener(evt, e => { maxPct.value = e.target.value; sync(); });
            });

            sync();
        })();
    </script>
}

