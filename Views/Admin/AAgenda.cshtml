@model J_Tutors_Web_Platform.ViewModels.AAgendaPageVM
@{
    ViewData["Title"] = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "Admin";
}

<div class="card shadow p-24">
    <div class="d-flex justify-content-between align-items-center mb-16">
        <h1 class="mb-0">Agenda</h1>
        <div class="d-flex gap-3 text-muted">
            <span>Scheduled: <strong>@Model.ScheduledCount</strong></span>
            <span>Accepted: <strong>@Model.AcceptedCount</strong></span>
            <span>Paid: <strong>@Model.PaidCount</strong></span>
            <span>Cancelled: <strong>@Model.CancelledCount</strong></span>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <span class="nav-link active">Slots</span>
        </li>
        @* Future parts will add real links for Inbox/Calendar *@
    </ul>

    <div class="mt-16">
        <partial name="~/Views/Admin/AAgendaSlots.cshtml" model="Model.Slots" />
    </div>
</div>
