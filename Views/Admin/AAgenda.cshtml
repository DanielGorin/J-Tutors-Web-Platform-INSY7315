@model J_Tutors_Web_Platform.ViewModels.AdminAgendaShellVM
@{
    ViewData["Title"] = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "Admin";
}
<script src="https://unpkg.com/htmx.org@1.9.12"></script>

<div class="card shadow p-24">
    <div class="d-flex justify-content-between align-items-center mb-16">
        <h1 class="mb-0">Agenda</h1>
        <div class="d-flex gap-3 text-muted">
            <span>Scheduled: <strong>@Model.ScheduledCount</strong></span>
            <span>Accepted: <strong>@Model.AcceptedCount</strong></span>
            <span>Paid: <strong>@Model.PaidCount</strong></span>
            <span>Cancelled: <strong>@Model.CancelledCount</strong></span>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <button class="nav-link active"
                    hx-get="@Url.Action("_AgendaSlots","Admin")"
                    hx-target="#tabBody" hx-trigger="load" hx-swap="innerHTML"
                    type="button">
                Slots
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link"
                    hx-get="@Url.Action("_AgendaInbox","Admin")"
                    hx-target="#tabBody" hx-swap="innerHTML"
                    type="button">
                Inbox
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link"
                    hx-get="@Url.Action("_AgendaCalendar","Admin")"
                    hx-target="#tabBody" hx-swap="innerHTML"
                    type="button">
                Calendar
            </button>
        </li>
    </ul>

    <div id="tabBody" class="mt-16">
        <div class="text-muted">Loading…</div>
    </div>
</div>
