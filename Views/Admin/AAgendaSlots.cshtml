@model J_Tutors_Web_Platform.ViewModels.AgendaSlotsVM

<div class="d-flex justify-content-between align-items-center mb-12">
    <h3 class="mb-0">Slots</h3>
    <small class="text-muted">Availability blocks</small>
</div>

@if (Model.Blocks.Count == 0)
{
    <div class="alert alert-info">No availability blocks yet.</div>
}
else
{
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>AdminID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Blocks.OrderBy(x => x.BlockDate).ThenBy(x => x.StartTime))
            {
                <tr>
                    <td>@b.BlockDate.ToString("yyyy-MM-dd")</td>
                    <td>@b.StartTime</td>
                    <td>@b.EndTime</td>
                    <td>@b.AdminID</td>
                </tr>
            }
        </tbody>
    </table>
}
