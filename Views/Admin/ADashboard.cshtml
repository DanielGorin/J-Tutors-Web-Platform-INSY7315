@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "Admin";
}

<style>
    /* Keep the 50/50 split buttons tidy */
    .split-btns .btn {
        width: 100%;
    }
</style>

<h1 class="mb-4">Admin Dashboard</h1>

<div class="row mb-4">
    <!-- Events -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Events</h3>
            <a asp-controller="Event" asp-action="GetAEventList" class="btn btn-sm btn-outline-primary">
                Open Events
            </a>
        </div>
    </div>

    <!-- Agenda -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Agenda</h3>
            <a asp-controller="AdminAgenda" asp-action="Agenda" class="btn btn-sm btn-outline-primary">
                Open Agenda
            </a>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- Subject Pricing -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Subject Pricing</h3>
            <a asp-controller="Admin" asp-action="APricing" class="btn btn-sm btn-outline-primary">
                Manage Pricing Rules
            </a>
        </div>
    </div>

    <!-- Files -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Files</h3>
            <a asp-controller="Test" asp-action="GetFileShareRows" class="btn btn-sm btn-outline-primary">
                Manage Files
            </a>
        </div>
    </div>
</div>

<div class="row mb-4">
    <!-- User Directory -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>User Directory</h3>
            <a asp-controller="AdminUserDirectory" asp-action="Index" class="btn btn-sm btn-outline-primary">
                Open User Directory
            </a>
        </div>
    </div>

    <!-- Analytics -->
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h3>Analytics</h3>
            <a asp-controller="Analytics" asp-action="AnalyticsPage" class="btn btn-sm btn-outline-primary">
                Open Analytics
            </a>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="card shadow p-3 mb-4">
    <h3>Quick Links</h3>
    <div class="row g-2 split-btns">
        <div class="col-sm-6 col-lg-3">
            <a asp-controller="Home" asp-action="AAccount" class="btn btn-outline-primary w-100">Account</a>
        </div>
        <div class="col-sm-6 col-lg-3">
            <a asp-controller="Event" asp-action="GetAEventList" class="btn btn-outline-primary w-100">Events</a>
        </div>
        <div class="col-sm-6 col-lg-3">
            <a asp-controller="AdminAgenda" asp-action="Agenda" class="btn btn-outline-primary w-100">Agenda</a>
        </div>
    </div>
</div>
