@using J_Tutors_Web_Platform.ViewModels
@model UserLedgerPageViewModel

@{
    ViewData["Title"] = "Points Ledger";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["NavSection"] = "User";

    string KindLabel(LedgerRowKind k) => k switch
    {
        LedgerRowKind.Earned => "Earned",
        LedgerRowKind.Spent => "Spent",
        _ => "Adjustment"
    };
    string AmountText(int a) => (a >= 0 ? "+" : "") + a.ToString();
}

<style>
    .ledger-min .row-card {
        background: var(--surface-color);
        border: 1px solid var(--border-color);
        border-left: 4px solid var(--border-color);
        border-radius: 12px;
        padding: 12px 14px;
        margin-bottom: 10px;
    }

        .ledger-min .row-card.earned {
            border-left-color: var(--success-color);
        }

        .ledger-min .row-card.spent {
            border-left-color: var(--error-color);
        }

        .ledger-min .row-card.adjust {
            border-left-color: var(--accent-color);
        }

    .ledger-min .muted {
        color: var(--muted-text-color);
    }

    .ledger-min .amt-pos {
        color: var(--success-color);
        font-weight: 700;
    }

    .ledger-min .amt-neg {
        color: var(--error-color);
        font-weight: 700;
    }
</style>

<div class="ledger-min">
    <h1 class="mb-3">Points Ledger</h1>

    @if (Model.Rows == null || Model.Rows.Count == 0)
    {
        <div class="row-card">
            <div class="muted">No point transactions yet.</div>
        </div>
    }
    else
    {
        foreach (var r in Model.Rows)
        {
            var css = r.Kind == LedgerRowKind.Earned ? "earned"
            : r.Kind == LedgerRowKind.Spent ? "spent"
            : "adjust";
            var amtClass = r.Amount >= 0 ? "amt-pos" : "amt-neg";

            <div class="row-card @css shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="muted">
                            @r.ReceiptDateUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                        </div>
                        <div><strong>@KindLabel(r.Kind)</strong></div>
                    </div>
                    <div class="@amtClass">@AmountText(r.Amount)</div>
                </div>
            </div>
        }
    }
</div>
